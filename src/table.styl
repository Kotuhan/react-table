@import "variables";

.table {
    table {
        background-color: transparent;
        border-collapse: collapse;
        border-spacing: 0;

        caption {
            padding-top: $table-cell-padding;
            padding-bottom: $table-cell-padding;
            text-align: left;
        }
        th {
            text-align: left;
        }
    }
}

.table {
    table {
        width: 100%;
        max-width: 100%;
        table-layout: fixed;
        border: 1px solid $table-border-color;

        > thead,
        > tbody,
        > tfoot {
            > tr {
                > th,
                > td {
                    padding: $table-cell-padding;
                    vertical-align: top;
                    overflow: hidden;
                    text-overflow:ellipsis;

                    a {
                        text-decoration: none;
                    }
                }
            }
        }

        // Bottom align for column headings
        > thead > tr > th {
            //border-bottom: 2px solid #cccccc;
            color: #777777;
            font-weight: bold;
            &.gutter {
                width: 38px;
            }
        }

        // Remove top border from thead by default
        > caption + thead,
            > colgroup + thead,
            > thead:first-child {
                > tr:first-child {
                > th,
                > td {
                    border-top: 0;
                }
            }
        }

        // Account for multiple tbody instances
        > tbody + tbody {
            border-top: 2px solid $table-border-color;
        }

        // Nesting
        .table table {
            background-color: $body-bg;
        }
    }
}

.table {
    table {
        .clickable-column {
            margin: -8px -12px;
            padding: 8px 12px;
            color: inherit;
            display: block;
            padding: 8px 12px;

            &:hover {
                background-color: #e6e6e6;
                cursor: pointer;
            }
        }
    }
}
.table-minimalism {
    table {
        .clickable-column {
            &:hover {
                background-color: inherit; 
            }
        }
    }
}

// Scrollable
.table-with-pagination .table-scrollable { 
    max-height: 149px;
    overflow-y: auto;
}

// Table cell sizing
//
// Reset default table behavior
.table {
    table {
        col[class*="col-"] {
            position: static; // Prevent border hiding in Firefox and IE9-11 (see https://github.com/twbs/bootstrap/issues/11623)
            float: none;
            display: table-column;
        }
    }
}

.table {
    table {
        td,
        th {
            &[class*="col-"] {
                position: static; // Prevent border hiding in Firefox and IE9-11 (see https://github.com/twbs/bootstrap/issues/11623)
                float: none;
                display: table-cell;
            }
        }
    }
}
