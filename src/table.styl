@import "variables";

.table-wrapper {
    border: 1px solid $table-border-color;
    box-sizing: border-box;
    position: relative;

    * {
        box-sizing: border-box;
    }

    > .table-area {
        position: relative;
    }
}

.table {
    width: 100%;
    max-width: 100%;
    table-layout: fixed;
    background-color: $body-bg;
    overflow: auto;

    > .thead,
    > .tbody,
    > .tfoot {
        > .tr {
            > .th,
            > .td {
                padding: $table-cell-padding;
                vertical-align: middle;
                display: inline-block;
                overflow: hidden;

                > .td-content {
                    position: relative;
                    top: 50%;
                    transform: translateY(-50%);
                }

                a {
                    text-decoration: none;
                }
            }
        }
    }

    > .thead {
        > .tr > .th {
            color: #777777;
            font-weight: bold;
        }
        > .tr:first-child {
            > .th,
            > .td {
                border-top: 0;
            }
        }
    }
    > .tbody {
         > .tr {
            overflow: hidden;
            > .td {
                > .td-content {
                    white-space: normal;
                }
            }
            &:last-child > .tr-expand {
                border-top: 1px solid $table-border-color;
                border-bottom: none;
            }
        }
    }
}

.table {
    .clickable-column {
        color: inherit;
        display: block;

        &:hover {
            background-color: #e6e6e6;
            cursor: pointer;
        }
    }
}

.table-extend-column-width {
    .table {
        > .thead,
        > .tbody,
        > .tfoot {
            > .tr {
                white-space: nowrap;
            }
        }
        > .tbody {
             > .tr {
                > .td {
                    > .td-content {
                        white-space: nowrap;
                    }
                }
            }
        }
    }
}

.tr-expand {
    border-bottom: 1px solid $table-border-color;
    white-space: normal;
}