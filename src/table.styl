$body-bg = #fff;
$table-border-color = #ddd;
$table-cell-padding = 8px 12px;
$table-condensed-cell-padding = 5px;
$table-header-border-bottom-color = #ccc;
$table-bg-accent = #f9f9f9;
$table-bg-hover = #e6f4fc;

.table {
    :global {
        .rc-table-placeholder {
            text-align: center;
            padding: 26px 12px;
            color: #999;
        }
    }
    &.table-bordered {
        :global {
            .rc-table-placeholder {
                border: 1px solid #ddd;
                border-top: none;
            }
        }
    }
}

.table table {
    background-color: transparent;
    border-collapse: collapse;
    border-spacing: 0;

    caption {
        padding-top: $table-cell-padding;
        padding-bottom: $table-cell-padding;
        text-align: left;
    }
    th {
        text-align: left;
    }
}

// Baseline styles
.table-container {
    position: relative;
}

.table table {
    width: 100%;
    max-width: 100%;
    table-layout: fixed;
    border: 1px solid $table-border-color;

    > thead,
    > tbody,
    > tfoot {
        > tr {
            > th,
            > td {
                padding: $table-cell-padding;
                vertical-align: top;
                overflow: hidden;
                text-overflow:ellipsis;

                a {
                    text-decoration: none;
                }
            }
        }
    }

    // Bottom align for column headings
    > thead > tr > th {
        //border-bottom: 2px solid #cccccc;
        color: #777777;
        font-weight: bold;
        &.gutter {
            width: 38px;
        }
    }

    // Remove top border from thead by default
    > caption + thead,
        > colgroup + thead,
        > thead:first-child {
            > tr:first-child {
            > th,
            > td {
                border-top: 0;
            }
        }
    }

    // Account for multiple tbody instances
    > tbody + tbody {
        border-top: 2px solid $table-border-color;
    }

    // Nesting
    .table {
        background-color: $body-bg;
    }
}

// Condensed table w/ half padding
.table-condensed table {
    > thead,
    > tbody,
    > tfoot {
        > tr {
            > th,
            > td {
                padding: $table-condensed-cell-padding;
            }
        }
    }
}

// Bordered version
//
// Add borders all around the table and between all the columns.
.table-bordered table {
    > thead,
    > tbody,
    > tfoot {
        > tr {
            > th,
            > td {
                border: 1px solid $table-border-color;
            }
        }
    }
    > thead {
        > tr {
            > th,
            > td {
                background-color: #EEEEEE;
                border-bottom-width: 2px;
                border-bottom-color: $table-header-border-bottom-color;
            }
        }
    }
}

//style portal table Minimalism
.table-minimalism table {
    border: 0;
    > thead,
    > tbody,
    > tfoot {
        > tr {
            > th,
            > td {
                border-bottom: 1px solid $table-border-color;
            }
        }
    }
    > thead {
        > tr {
            > th,
            > td {
                border-bottom-width: 2px;
                border-bottom-color: $table-header-border-bottom-color;
            }
        }
    }
}


// Zebra-striping
//
// Default zebra-stripe styles (alternating gray and transparent backgrounds)
.table-striped table {
    > tbody > tr:nth-of-type(odd) {
        background-color: $table-bg-accent;
    }
}

// Hover effect
//
// Placed here since it has to come after the potential zebra striping
.table-hover table {
    > tbody > tr:hover {
        background-color: $table-bg-hover;
    }
    > tbody > tr > td.td-link {
        &:hover {
            cursor: pointer;
            a {
                text-decoration: underline;
                color: #db3d44;
            }
        }
    }
}

// Sortable effect 
.table-sortable table {
    > thead > tr > th:hover {
        background-color: #e6e6e6;;
        cursor: pointer;
    }
    .sortabled {
        color: #222;

        .icon_sortDescending {
            vertical-align: top;
            margin-top: 1px;
        }
    }
}

// Scrollable
.table-with-pagination .table-scrollable { 
    max-height: 149px;
    overflow-y: auto;
}

// No-data
.table-no-data table {
    tbody > tr {
        td {
          text-align: center;
          padding: 26px 12px;
          color: #999;
        }
    } 
}

// Table Comfortable
.table-comfortable table {
    > thead,
    > tbody,
    > tfoot {
        > tr {
            > th,
            > td {
                padding: 12px 12px;
            }
        }
    }
}

// Table cell sizing
//
// Reset default table behavior
.table table col[class*="col-"] {
    position: static; // Prevent border hiding in Firefox and IE9-11 (see https://github.com/twbs/bootstrap/issues/11623)
    float: none;
    display: table-column;
}

.table table {
    td,
    th {
        &[class*="col-"] {
            position: static; // Prevent border hiding in Firefox and IE9-11 (see https://github.com/twbs/bootstrap/issues/11623)
            float: none;
            display: table-cell;
        }
    }
}

// Table backgrounds
//
// Exact selectors below required to override `.table-striped` and prevent
// inheritance to nested tables.
.table table {
    > thead,
    > tbody,
    > tfoot {
        > tr {
            > th.active,
            > td.active {
                background-color: #fcf8da;
            }
        }
        > tr.active {
            > th,
            > td {
                background-color: #fcf8da;
            }
        }
    }
}
.table-hover table {
    > tbody {
        tr > th.active:hover,
        tr > td.active:hover,
        tr:hover > .active,
        tr.active:hover > th {
            background-color: #faf4c2;
        }
    }
}

